ErrorDocument 403 /errors/access-denied/
ErrorDocument 404 /errors/page-not-found/
ErrorDocument 500 /errors/other-error/

RewriteEngine On
RewriteBase /

# смерть префиксу «www.»
RewriteCond %{SERVER_NAME} ^www\.(.+)$
RewriteRule ^.*$ http://%1/$0 [R=permanent,QSA,L]


# Zend Framework
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^.*$ /index.php [L]